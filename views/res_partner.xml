<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="view_res_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!-- <xpath expr="//form/sheet/group/group/div[@class='o_address_format']" position="after"> -->
                <xpath expr="//form/sheet/group" position="after">
                    <group string="School Details" col="1">    
                        <group col="2">
                            <group string="Manager">
                                <field name="manager_name"/>
                                <field name="manager_phone"/>
                            </group>
                            <group string="Responsible">
                                <field name="responsible_name"/>
                                <field name="responsible_phone"/>
                            </group>
                        </group>
                        <group col="2">
                            <group string="Curriculum">
                                <field name="curriculum_type"/>
                            </group>
                            <group string="Location" col="1">
                                <group col="2">
                                    <group>
                                        <field name="location_link"/>
                                    </group>
                                    <group>
                                        <button 
                                            type="object" 
                                            class="oe_highlight" 
                                            title="Show on Map"
                                            icon="fa-solid fa-globe"
                                            name="view_school_location_with_link"
                                        />
                                    </group>
                                </group>
                                <!-- <group col="3">
                                    <group>
                                        <field name="latitude"/>
                                    </group>
                                    <group>
                                        <field name="longitude"/>
                                    </group>
                                    <group>
                                        <button 
                                            type="object" 
                                            class="oe_highlight" 
                                            title="Show on Map"
                                            icon="fa-solid fa-globe"
                                            name="view_school_location"
                                        />
                                    </group>
                                </group> -->
                            </group>
                        </group>
                    </group>
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page string="Visits History">
                        <field name="visits_history_ids" readonly="1">
                            <tree create="fasle" edit="false" delete="false">
                                <field name="date"/>
                                <field name="create_uid"/>
                            </tree>
                            <form create="false" edit="false" delete="false">
                                <div class="oe_title">
                                    <label for="date" class="oe_edit_only"/>
                                    <h3>
                                        <field name="name" readonly="1"/>
                                    </h3>
                                </div>
                                <group col="1">
                                    <group col="2">
                                        <group>
                                            <field name="date" readonly="1" options="{'no_open': True, 'no_create': True}"/>
                                        </group>
                                        <group>
                                            <field name="partner_id" options="{'no_open': True, 'no_create': True}"/>
                                        </group>
                                    </group>

                                    <group col="1">
                                        <group>
                                            <field name="notes" options="{'no_open': True, 'no_create': True}"/>
                                        </group>
                                    </group>
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>


</odoo>
